import math #导入math模块

# 定义两个数字变量
a = 5 
b = 2

# 幂运算
print(pow(a,b)) 

# 开方
print(math.sqrt(a))

# 向上取整
print(math.ceil(3.1))

# 向下取整  
print(math.floor(3.9))

# 绝对值
print(abs(-5))

# 最大值 
print(max(2,3))

# 最小值
print(min(-1,3))

# 随机数
import random
print(random.random()) 

# 圆周率
print(math.pi) 

# 三角函数
print(math.sin(math.pi/2))
print(math.cos(0))
